<table>


	<tr id="row">

		<th class="name">
			{{#if open}}
				<i class="fa fa-minus-circle" />
			{{else}}
				<i class="fa fa-plus-circle" />
			{{/if}}
			<span>New room</span>
		</th>

		<th style="text-align: right;">
			<div id="confirmButton" style="display: none;">
				{{inputs/default-confirm-button icon="fa-check-circle-o" label="Confirm" disabled=cantConfirm action="create"}}
			</div>
		</th>

	</tr>


	<tr class="expanded">

		<th>
			<div class="roomName">
				{{inputs/default-textbox placeholder="Room name" currValue=roomName}}
			</div>
			<div class="roomPassword">
				{{inputs/default-textbox placeholder="Password" currValue=roomPassword}}
			</div>
			<div class="roomDescription">
				{{textarea placeholder="Room description..." value=roomDescription}}
			</div>
		</th>

		<th class="options">
			
			<span class="title">Options</span><br>

			{{inputs/default-checkbox value=endlessMode}} <span class="label">Endless mode</span><br>
			{{inputs/default-checkbox value=enableAway}} <span class="label">Enable away</span><br>
			{{inputs/default-checkbox value=enableHints}} <span class="label">Enable hints</span><br>
			{{inputs/default-numberbox value=maxPlayers max=100 min=0}} <span class="label">Max players</span><br>
			{{inputs/default-numberbox value=maxRounds max=100 min=0}} <span class="label">Max rounds</span><br>
			<br>
			{{inputs/default-select data=supportedLanguages controllerName="language"}}

		</th>
	</tr>


</table>